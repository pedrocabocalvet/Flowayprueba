<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"  android:padding="16dp"
    android:background="@color/second_accent"
    android:paddingTop="20dp">
    <Button
        android:text="IMAGEN"
        android:layout_width="match_parent"
        android:layout_above="@+id/ButtonContinuarTercerReg"
        android:layout_centerHorizontal="true"
        android:id="@+id/ButtonBuscaFoto"
        android:elevation="10dp"
        android:layout_height="50dp"
        android:background="@color/second_accent_dark"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:onClick="intentPicture"
        />
    <Button
        android:text="EMPEZAR"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ButtonContinuarTercerReg"
        android:elevation="10dp"
        android:layout_height="50dp"
        android:background="@color/second_accent_dark"
        android:gravity="center" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@color/second_accent_dark"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2" />

    <TextView
        android:text="Bienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCom"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@color/icons"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="dario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNombre"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/icons"
        android:layout_above="@+id/imageView2"
        android:layout_marginBottom="16dp" />



</RelativeLayout>